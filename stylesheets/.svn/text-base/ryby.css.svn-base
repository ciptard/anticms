body { font-family: "Century Gothic", "Lucida Grande", Arial, Verdana, san-serif; text-align: center; padding: 0; margin: 0; background: url('../images/top_gradient.png') repeat-x top left; }
/* Typography */
div#main h3 { margin-bottom: 12px; font-weight: bold; font-size: 16px; }
div#main p, div#main ul { margin-bottom: 12px; }
div#main li { margin-bottom: 4px; }
div#main strong { font-weight: bold; }
div#main a:link, div#main a:visited { color: #bd9429; }
div#main a:hover, div#main a:active { background: #f5ebd1; }
table.form { border-collapse: collapse; }
table.form td { padding-bottom: 12px; padding-right: 6px; }
/* Specific elements */
div.container { width: 600px; margin-left: auto; margin-right: auto; text-align: left; position: relative; padding: 1px;}
div#header { margin-top: 98px; width: 591px; height: 194px; border: 2px solid #efefe7;}
h2#wordmark { position: absolute; width: 262px; height: 52px; overflow: hidden; top: 58px; left: 20px;}
h2#wordmark span { position: absolute; width: 100%; height: 100%; background: url('../images/wordmark.png'); }
div#stress, div#peace { height: 150px; /*border: 1px solid red;*/ position: relative; margin-top: 32px; margin-left: 35px; }
div#stress h3, div#peace h3 { position: absolute; top: 133px; text-align: center; width: 100%; color: #555555; }
h1#slogan { position: relative; width: 593px; height: 34px; overflow: hidden; margin-top: 51px; margin-left: 4px; }
h1#slogan span { position: absolute; width: 100%; height: 100%; background: url('../images/slogan.png'); }
ul#nav { float: left; text-align: right; width: 169px; margin-top: 27px; display: inline; }
ul#nav li { font-size: 17px; text-transform: lowercase; margin-bottom: 8px; }
ul#nav li span.selected { color: #bd9429; }
ul#nav li a:link, ul#nav li a:visited { color: #555555; text-decoration: none; }
ul#nav li a:hover, ul#nav li a:active { color: #bd9429; background: #f5ebd1; }
div#main { margin-top: 31px; margin-left: 208px; font-size: 14px; line-height: 130%; color: #555555; width: 350px;}
/* Contact page */
p#subscribe_to_mailing_list { margin-top: 50px; }